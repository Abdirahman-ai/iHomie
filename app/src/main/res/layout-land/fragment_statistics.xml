<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="823dp"
    android:background="@drawable/background_color"
    tools:context=".StatisticsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/statistics_label"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="16dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Statistics"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:defaultQueryHint="500 Tech Way, Palo Alto, CA 94020"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:layout_constraintTop_toBottomOf="@id/container_group"
            app:layout_constraintStart_toStartOf="@id/container_group"
            app:layout_constraintEnd_toEndOf="@id/container_group"
            />

        <FrameLayout
            android:id="@+id/container_group"
            android:layout_width="614dp"
            android:layout_height="66dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statistics_label">

            <FrameLayout
                android:id="@+id/container_destination_instruct"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_rectangle"
                    android:layout_width="613dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/pinkrectangle"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/text_enter_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginLeft="68dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="17dp"
                    android:alpha="0.6000000238418579"
                    android:gravity="left|top"
                    android:includeFontPadding="false"
                    android:lineHeight="25.03dp"
                    android:text="Enter destination address to compare commute time"
                    android:textSize="21dp" />

                <ImageView
                    android:id="@+id/container_road"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="17dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/road" />
            </FrameLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>
